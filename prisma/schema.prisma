generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id @default(cuid())
  shop      String   @index
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Template {
  id        String   @id @default(cuid())
  shop      String   @index
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  fields    Field[]
  rules     Rule[]
  links     ProductTemplateLink[]
}

model Field {
  id          String   @id @default(cuid())
  templateId  String   @index
  type        String   // text | select | radio | checkbox
  name        String
  label       String
  optionsJson Json?
  required    Boolean  @default(false)
  sort        Int      @default(0)
  template    Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
}

model Rule {
  id          String   @id @default(cuid())
  templateId  String   @index
  expression  String   // your DSL/JSON for conditions
  action      String   // show | hide | require | disable | limit
  payloadJson Json?
  sort        Int      @default(0)
  template    Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
}

model ProductTemplateLink {
  id          String   @id @default(cuid())
  shop        String   @index
  productGid  String   @index // gid://shopify/Product/...
  templateId  String   @index
  template    Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}
