{% comment %}
  Custom Product Options - renders dynamic fields based on templates
{% endcomment %}

<div 
  class="product-options-wrapper" 
  data-product-id="{{ product.id }}"
  data-app-url="{{ shop.permanent_domain | split: '.myshopify.com' | first }}"
>
  <div id="custom-options-{{ product.id }}" class="custom-options-container">
    <div class="loading-state">
      <p>Loading custom options...</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Product Options",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customize Your Product"
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    }
  ]
}
{% endschema %}
